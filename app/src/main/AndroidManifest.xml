<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linkstar.app.store">

    //获取设备网络状态，禁用后无法获取网络状态
    <uses-permission android:name="android.permission.INTERNET" />
    //获取设备的网络状态，鉴权所需网络代理
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.activity.StartupPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".ui.activity.SystemMsgActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.GoodsManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.OrderManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.GuideRecruitActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.StoreDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.GoodsAnalysisActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.GuideApplyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.AuditRecordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.GuideSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MsgSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.PwdManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.CustomerAnalysisActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.TotalSalesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.OrderTimeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.FeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MonthDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.OrderDetailActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>