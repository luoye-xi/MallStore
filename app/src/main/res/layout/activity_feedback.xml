<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_color_bg"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <EditText
        android:id="@+id/et_feedback_input"
        style="@style/text_style_black_title_14"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="为了更好的为你服务，请你务必详细描述你所遇到的问题！"
        android:lineSpacingExtra="5dp"
        android:padding="18dp" />

    <include layout="@layout/view_line" />

    <Button
        android:id="@+id/btn_submit"
        style="@style/text_style_white_16"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="15dp"
        android:background="@drawable/blue_btn_corner_5dp"
        android:text="提交反馈" />
</LinearLayout>
