<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_color_bg"
    android:orientation="vertical">

    <com.linkstar.app.store.ui.view.GraphChartView
        android:id="@+id/graph_chart_view"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@color/white"
        android:padding="15dp" />

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_total_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_style_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售总额" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="1dp"
                android:layout_margin="6dp"
                android:src="@drawable/icon_wire_blue" />

            <TextView
                style="@style/text_style_blue_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2887.64" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_height_1px"
            android:layout_height="14dp"
            android:background="@color/line_color_gray" />

        <LinearLayout
            android:id="@+id/layout_online_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_style_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上销售额" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="1dp"
                android:layout_margin="6dp"
                android:src="@drawable/icon_wire_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="996.64"
                android:textColor="@color/orange"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_height_1px"
            android:layout_height="14dp"
            android:background="@color/line_color_gray" />

        <LinearLayout
            android:id="@+id/layout_offline_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_style_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线下销售额" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="1dp"
                android:layout_margin="6dp"
                android:src="@drawable/icon_wire_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1891"
                android:textColor="@color/green"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:id="@+id/layout_to_order"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <include layout="@layout/view_line" />

        <TextView
            style="@style/text_style_black_title_14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:text="查看销售详情" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@drawable/icon_right_arrow" />
    </RelativeLayout>

    <include layout="@layout/view_line" />
</LinearLayout>
